{
  "name": "@code-to-json/schema",
  "version": "0.3.5-rc.47",
  "description": "",
  "main": "lib/src/index.js",
  "typings": "lib/src/index.d.ts",
  "license": "BSD-2-Clause",
  "author": "Mike North <michael.l.north@gmail.com> (https://mike.works)",
  "scripts": {
    "lint": "yarn lint:js && yarn lint:md",
    "lint:js": "eslint . --ext js,ts",
    "lint:md": "remark .",
    "test": "mocha",
    "test:debug": "mocha --inspect-brk",
    "test:coverage": "nyc npm test",
    "codacy:transmit-coverage": "cat coverage/lcov.info | codacy-coverage",
    "clean": "rm -rf ./lib",
    "build": "tsc -b .",
    "rebuild": "npm run clean & npm run build",
    "prepublishOnly": "tsc -b ."
  },
  "repository": "https://github.com/mike-north/code-to-json",
  "homepage": "https://github.com/mike-north/code-to-json/tree/master/packages/schema",
  "keywords": [],
  "devDependencies": {
    "@code-to-json/test-helpers": "^1.0.0-rc.48",
    "@types/chai": "5.2.2",
    "@types/strip-json-comments": "3.0.0",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "chai": "5.2.0",
    "eslint": "9.27.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "17.18.0",
    "eslint-plugin-prettier": "5.4.0",
    "mocha": "11.4.0",
    "nyc": "17.1.0",
    "remark-cli": "12.0.1",
    "remark-lint": "10.0.1",
    "remark-lint-no-dead-urls": "2.0.1",
    "remark-preset-lint-markdown-style-guide": "6.0.1",
    "remark-preset-lint-recommended": "7.0.1",
    "remark-validate-links": "13.1.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@mike-north/types": "^1.0.7",
    "strip-json-comments": "^2.0.1"
  },
  "nyc": {
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    },
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src"
    ],
    "reporter": [
      "lcov",
      "json",
      "text-summary"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-preset-lint-markdown-style-guide"
    ]
  }
}
