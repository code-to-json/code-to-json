{
  "name": "code-to-json-monorepo",
  "version": "0.0.0-development",
  "main": "index.js",
  "author": "Mike North <michael.l.north@gmail.com> (https://mike.works)",
  "license": "BSD-2-Clause",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@commitlint/travis-cli": "19.2.1",
    "@types/rimraf": "4.0.5",
    "concurrently": "8.2.2",
    "husky": "9.0.11",
    "lerna": "8.1.6",
    "nodemon": "3.1.0",
    "rimraf": "2.7.1",
    "scripty": "2.1.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0
      ]
    }
  },
  "scripts": {
    "publish": "scripty",
    "build:watch": "scripty",
    "clean": "scripty",
    "build": "lerna link && lerna run build",
    "rebuild": "scripty",
    "watch": "scripty",
    "watch:debug": "scripty",
    "test": "lerna run test --parallel",
    "test:watch": "scripty",
    "lint": "lerna run lint --parallel --concurrency 8",
    "lint:js": "lerna run lint:js --parallel --concurrency 8",
    "lint:watch": "scripty"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/code-to-json/code-to-json.git"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./node_modules/.bin/commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "toolchain": {
    "node": "10.12.0",
    "yarn": "1.10.0"
  }
}
